                                             behaviors:ReorderableListBoxBehavior.AcceptXmlFiles="True"
                                             DragDrop.AllowDrop="True"
                                             Background="Transparent"
                                             BorderThickness="0">
                                        
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="4"/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
