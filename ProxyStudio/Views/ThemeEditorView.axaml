<!-- Updated ThemeEditorView.axaml - Simplified 12-Color System -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             
             xmlns:vm="clr-namespace:ProxyStudio.ViewModels"
            
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="800"
             x:Class="ProxyStudio.Views.ThemeEditorView"
             x:DataType="vm:ThemeEditorViewModel">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Simplified Color Editor Panel -->
        <Border Grid.Column="0" 
                Classes="sidebar "
                Background="{DynamicResource SurfaceElevatedBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <ScrollViewer Classes="sidebar">
                <StackPanel Spacing="16" Margin="10,0">
                    
                    <!-- Header -->
                    <StackPanel Spacing="8">
                        <TextBlock Classes="heading-medium" 
                                 Text="Theme Editor"
                                 Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Classes="body-medium" 
                                 Text="Create custom themes with just 12 core colors"
                                 
                                 
                                 Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                    
                    <!-- Theme Metadata -->
                    <Border Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Classes="heading-small" 
                                     Text="Theme Information"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <StackPanel Spacing="4">
                                <TextBlock Classes="caption" 
                                         Text="THEME NAME"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Text="{Binding ThemeName}"
                                       Background="{DynamicResource SurfaceBrush}"
                                       BorderBrush="{DynamicResource BorderBrush}"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Watermark="Enter theme name..."
                                      
                                       MaxWidth="313"
                                       />
                                
                            </StackPanel>
                            
                            <StackPanel Spacing="4">
                                <TextBlock Classes="caption" 
                                         Text="DESCRIPTION"
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         
                                         
                                         />
                                <TextBox Text="{Binding ThemeDescription}"
                                       Background="{DynamicResource SurfaceBrush}"
                                       BorderBrush="{DynamicResource BorderBrush}"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Watermark="Describe your theme..."
                                       MaxWidth="313"
                                       />
                                
                            </StackPanel>
                            
                            <StackPanel Spacing="4">
                                <TextBlock Classes="caption" 
                                         Text="AUTHOR"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Text="{Binding ThemeAuthor}"
                                       Background="{DynamicResource SurfaceBrush}"
                                       BorderBrush="{DynamicResource BorderBrush}"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Watermark="Your name"
                                       MaxWidth="313"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Base Theme Selection -->
                    <Border Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Classes="heading-small" 
                                     Text="Base Theme"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <StackPanel Spacing="4">
                                <TextBlock Classes="caption" 
                                         Text="START WITH"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <ComboBox ItemsSource="{Binding BaseThemes}"
                                        SelectedItem="{Binding SelectedBaseTheme}"
                                        Background="{DynamicResource SurfaceBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        Foreground="{DynamicResource TextPrimaryBrush}"
                                        DisplayMemberBinding="{Binding Name}"/>
                            </StackPanel>
                            
                            <Button Classes="secondary" 
                                    Content="Reset to Base Theme"
                                    Background="{DynamicResource SecondaryBrush}"
                                    Command="{Binding ResetToBaseCommand}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <StackPanel Spacing="8">
                        <Button Classes="primary"
                                Content="Save Theme"
                                Background="{DynamicResource PrimaryBrush}"
                                Foreground="{DynamicResource TextOnPrimaryBrush}"
                                Command="{Binding SaveThemeCommand}"
                                IsEnabled="{Binding CanSaveTheme}"/>
                        
                        <Button Content="Export Theme" Classes="primary"
                                
                                Command="{Binding ExportThemeCommand}"/>
                        
                        <!-- Removed the bellow styles from the above button -->
                        <!-- Background="{DynamicResource SuccessBrush}" -->
                        <!-- Foreground="{DynamicResource TextOnPrimaryBrush}" -->
                        
                        
                        
                        <!-- Preview Controls -->
                        <StackPanel Spacing="4">
                            <Button Classes="secondary"
                                    Content="Preview Theme"
                                    Background="{DynamicResource InfoBrush}"
                                    Foreground="{DynamicResource TextOnPrimaryBrush}"
                                    Command="{Binding PreviewThemeCommand}"
                                    IsVisible="{Binding !IsPreviewActive}"/>
                            
                            <Button Content="Stop Preview"
                                    Background="{DynamicResource WarningBrush}"
                                    Foreground="{DynamicResource TextOnPrimaryBrush}"
                                    Command="{Binding StopPreviewCommand}"
                                    IsVisible="{Binding IsPreviewActive}"/>
                            
                            <!-- Preview Status Indicator -->
                            <Border Background="{DynamicResource InfoLightBrush}"
                                    BorderBrush="{DynamicResource InfoBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8"
                                    IsVisible="{Binding IsPreviewActive}">
                                <StackPanel Spacing="4" Orientation="Horizontal">
                                    <TextBlock Text="👁️" FontSize="14"/>
                                    <TextBlock Classes="body-small"
                                             Text="Preview Active"
                                             Foreground="{DynamicResource InfoBrush}"
                                             FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Status -->
                    <Border Background="{DynamicResource InfoLightBrush}"
                            BorderBrush="{DynamicResource InfoBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12">
                        <StackPanel Spacing="4">
                            <TextBlock Classes="body-small" 
                                     Text="Status"
                                     Foreground="{DynamicResource InfoBrush}"
                                     FontWeight="SemiBold"/>
                            <TextBlock Classes="body-small" 
                                     Text="{Binding StatusMessage}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Simplified Color Sections -->
        <ScrollViewer Grid.Column="1" Background="{DynamicResource BackgroundBrush}">
            <StackPanel Spacing="24" Margin="24">
                
                <!-- Foundation Colors Section -->
                <Border Background="{DynamicResource SurfaceElevatedBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="4">
                            <TextBlock Classes="heading-medium" 
                                     Text="🎨 Foundation Colors"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Classes="body-medium" 
                                     Text="Core brand colors that define your theme's personality"
                                     Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <ItemsControl ItemsSource="{Binding FoundationColors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Margin="4"
                                            Padding="12">
                                        <StackPanel Spacing="8">
                                            <!-- Color Preview -->
                                            <Border Height="60"
                                                    Background="{Binding ColorBrush}"
                                                    CornerRadius="4"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"/>
                                            
                                            <!-- Color Name -->
                                            <TextBlock Classes="body-medium" 
                                                     Text="{Binding Name}"
                                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                                     FontWeight="SemiBold"
                                                     TextAlignment="Center"/>
                                            
                                            <StackPanel Spacing="6">
                                                <ColorPicker Color="{Binding Color, Mode=TwoWay}"
                                                                         HorizontalAlignment="Center"
                                                                         Width="120"
                                                                         IsAlphaEnabled="False"
                                                                         ColorModel="Rgba"/>
    
                                                <TextBox Text="{Binding HexValue, Mode=TwoWay}"
                                                         Background="{DynamicResource SurfaceBrush}"
                                                         BorderBrush="{DynamicResource BorderBrush}"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         FontFamily="Consolas, Monaco, monospace"
                                                         TextAlignment="Center"
                                                         Watermark="#RRGGBB"
                                                         MaxLength="7"/>
                                            </StackPanel>
                                            
                                            <!-- Color Input -->
                                            <!-- <TextBox Text="{Binding HexValue}" -->
                                            <!--        Background="{DynamicResource SurfaceBrush}" -->
                                            <!--        BorderBrush="{DynamicResource BorderBrush}" -->
                                            <!--        Foreground="{DynamicResource TextPrimaryBrush}" -->
                                            <!--        FontFamily="Consolas, Monaco, monospace" -->
                                            <!--        TextAlignment="Center"/> -->
                                            
                                            <!-- Description -->
                                            <TextBlock Classes="body-small" 
                                                     Text="{Binding Description}"
                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                     TextWrapping="Wrap"
                                                     TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- Semantic Colors Section -->
                <Border Background="{DynamicResource SurfaceElevatedBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="4">
                            <TextBlock Classes="heading-medium" 
                                     Text="📊 Semantic Colors"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Classes="body-medium" 
                                     Text="Colors with specific meanings for consistent user experience"
                                     Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <ItemsControl ItemsSource="{Binding SemanticColors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Margin="4"
                                            Padding="12">
                                        <StackPanel Spacing="8">
                                            <Border Height="60"
                                                    Background="{Binding ColorBrush}"
                                                    CornerRadius="4"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"/>
                                            
                                            <TextBlock Classes="body-medium" 
                                                     Text="{Binding Name}"
                                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                                     FontWeight="SemiBold"
                                                     TextAlignment="Center"/>
                                            
                                            
                                            <StackPanel Spacing="6">
                                                <ColorPicker Color="{Binding Color, Mode=TwoWay}"
                                                             HorizontalAlignment="Center"
                                                             Width="120"
                                                             IsAlphaEnabled="False"
                                                             ColorModel="Rgba"/>
    
                                                <TextBox Text="{Binding HexValue, Mode=TwoWay}"
                                                         Background="{DynamicResource SurfaceBrush}"
                                                         BorderBrush="{DynamicResource BorderBrush}"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         FontFamily="Consolas, Monaco, monospace"
                                                         TextAlignment="Center"
                                                         Watermark="#RRGGBB"
                                                         MaxLength="7"/>
                                            </StackPanel>
                                            
                                            <!-- <TextBox Text="{Binding HexValue}" -->
                                            <!--        Background="{DynamicResource SurfaceBrush}" -->
                                            <!--        BorderBrush="{DynamicResource BorderBrush}" -->
                                            <!--        Foreground="{DynamicResource TextPrimaryBrush}" -->
                                            <!--        FontFamily="Consolas, Monaco, monospace" -->
                                            <!--        TextAlignment="Center"/> -->
                                            
                                            <TextBlock Classes="body-small" 
                                                     Text="{Binding Description}"
                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                     TextWrapping="Wrap"
                                                     TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- Surface Colors Section -->
                <Border Background="{DynamicResource SurfaceElevatedBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="4">
                            <TextBlock Classes="heading-medium" 
                                     Text="🏢 Surface Colors"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Classes="body-medium" 
                                     Text="Background colors that create visual depth and hierarchy"
                                     Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <ItemsControl ItemsSource="{Binding SurfaceColors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Margin="4"
                                            Padding="12">
                                        <StackPanel Spacing="8">
                                            <Border Height="60"
                                                    Background="{Binding ColorBrush}"
                                                    CornerRadius="4"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"/>
                                            
                                            <TextBlock Classes="body-medium" 
                                                     Text="{Binding Name}"
                                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                                     FontWeight="SemiBold"
                                                     TextAlignment="Center"/>
                                            
                                            <StackPanel Spacing="6">
                                                <ColorPicker Color="{Binding Color, Mode=TwoWay}"
                                                             HorizontalAlignment="Center"
                                                             Width="120"
                                                             IsAlphaEnabled="False"
                                                             ColorModel="Rgba"/>
    
                                                <TextBox Text="{Binding HexValue, Mode=TwoWay}"
                                                         Background="{DynamicResource SurfaceBrush}"
                                                         BorderBrush="{DynamicResource BorderBrush}"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         FontFamily="Consolas, Monaco, monospace"
                                                         TextAlignment="Center"
                                                         Watermark="#RRGGBB"
                                                         MaxLength="7"/>
                                            </StackPanel>
                                            
                                            <!-- <TextBox Text="{Binding HexValue}" -->
                                            <!--        Background="{DynamicResource SurfaceBrush}" -->
                                            <!--        BorderBrush="{DynamicResource BorderBrush}" -->
                                            <!--        Foreground="{DynamicResource TextPrimaryBrush}" -->
                                            <!--        FontFamily="Consolas, Monaco, monospace" -->
                                            <!--        TextAlignment="Center"/> -->
                                            
                                            <TextBlock Classes="body-small" 
                                                     Text="{Binding Description}"
                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                     TextWrapping="Wrap"
                                                     TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- Text Colors Section -->
                <Border Background="{DynamicResource SurfaceElevatedBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="4">
                            <TextBlock Classes="heading-medium" 
                                     Text="📝 Text Colors"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Classes="body-medium" 
                                     Text="Typography colors for readable and accessible text"
                                     Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <ItemsControl ItemsSource="{Binding TextColors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Margin="4"
                                            Padding="12">
                                        <StackPanel Spacing="8">
                                            <Border Height="60"
                                                    Background="{Binding ColorBrush}"
                                                    CornerRadius="4"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"/>
                                            
                                            <TextBlock Classes="body-medium" 
                                                     Text="{Binding Name}"
                                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                                     FontWeight="SemiBold"
                                                     TextAlignment="Center"/>
                                            
                                            <StackPanel Spacing="6">
                                                <ColorPicker Color="{Binding Color, Mode=TwoWay}"
                                                             HorizontalAlignment="Center"
                                                             Width="120"
                                                             IsAlphaEnabled="False"
                                                             ColorModel="Rgba"/>
    
                                                <TextBox Text="{Binding HexValue, Mode=TwoWay}"
                                                         Background="{DynamicResource SurfaceBrush}"
                                                         BorderBrush="{DynamicResource BorderBrush}"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         FontFamily="Consolas, Monaco, monospace"
                                                         TextAlignment="Center"
                                                         Watermark="#RRGGBB"
                                                         MaxLength="7"/>
                                            </StackPanel>
                                            
                                            <!-- <TextBox Text="{Binding HexValue}" -->
                                            <!--        Background="{DynamicResource SurfaceBrush}" -->
                                            <!--        BorderBrush="{DynamicResource BorderBrush}" -->
                                            <!--        Foreground="{DynamicResource TextPrimaryBrush}" -->
                                            <!--        FontFamily="Consolas, Monaco, monospace" -->
                                            <!--        TextAlignment="Center"/> -->
                                            
                                            <TextBlock Classes="body-small" 
                                                     Text="{Binding Description}"
                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                     TextWrapping="Wrap"
                                                     TextAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Preview and Help Panel -->
        
        <Border Grid.Column="2" Classes="sidebar card-elevated"
                
                BorderThickness="1,0,0,0">
            <ScrollViewer>
                <StackPanel Spacing="16" Margin="16">
                    
                    <!-- Live Preview -->
                   
                    <Border 
                        Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="16">
                            <TextBlock Classes="heading-small" 
                                     Text="Live Preview"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <!-- Sample UI Elements -->
                            <StackPanel Spacing="12">
                                <!-- Typography Preview -->
                                <StackPanel Spacing="4">
                                    <TextBlock Classes="heading-medium" 
                                             Text="Sample Heading"
                                             Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Classes="body-medium" 
                                             Text="This is body text showing primary text color."
                                             Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Classes="body-small" 
                                             Text="This is secondary text for descriptions."
                                             Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                                
                                <!-- Button Preview -->
                                <StackPanel Spacing="8">
                                    <TextBlock Classes="body-medium" 
                                             Text="Buttons:"
                                             Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Button Classes="primary" 
                                            Content="Primary"
                                            
                                                
                                                Padding="12,6"/>
                                        <Button Classes="secondary" 
                                            Content="Secondary"
                                                
                                                Padding="12,6"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Add this test button to your ThemeEditorView.axaml -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="DEBUG TEST:" />
    
                                    <!-- Test button with explicit style -->
                                    <Button x:Name="TestButton" 
                                            Content="TEST HOVER"
                                            Classes="primary"
                                            Background="Blue"
                                            Padding="12,6"
                                            PointerEntered="TestButton_OnPointerEntered"
                                            PointerExited="TestButton_OnPointerExited"/>
            
                                    <!-- Test button with inline hover style -->
                                    <Button Content="INLINE HOVER TEST" Padding="12,6">
                                        <Button.Styles>
                                            <Style Selector="Button">
                                                <Setter Property="Background" Value="Purple" />
                                            </Style>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="Yellow" />
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                </StackPanel>
                                
                                <!-- Status Preview -->
                                <StackPanel Spacing="4">
                                    <TextBlock Classes="body-medium" 
                                             Text="Status Colors:"
                                             Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    
                                    <Border Background="{DynamicResource SuccessLightBrush}"
                                            BorderBrush="{DynamicResource SuccessBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="6">
                                        <TextBlock Classes="body-small" 
                                                 Text="✓ Success message"
                                                 Foreground="{DynamicResource SuccessBrush}"/>
                                    </Border>
                                    
                                    <Border Background="{DynamicResource ErrorLightBrush}"
                                            BorderBrush="{DynamicResource ErrorBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="6">
                                        <TextBlock Classes="body-small" 
                                                 Text="✕ Error message"
                                                 Foreground="{DynamicResource ErrorBrush}"/>
                                    </Border>
                                    
                                    <Border Background="{DynamicResource WarningLightBrush}"
                                            BorderBrush="{DynamicResource WarningBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="6">
                                        <TextBlock Classes="body-small" 
                                                 Text="⚠ Warning message"
                                                 Foreground="{DynamicResource WarningBrush}"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Quick Tips -->
                    <Border Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Classes="heading-small" 
                                     Text="💡 Quick Tips"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <StackPanel Spacing="6">
                                <TextBlock Classes="body-small" 
                                         Text="• Only 12 colors to customize instead of 39+"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Classes="body-small" 
                                         Text="• Hover states are auto-generated"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Classes="body-small" 
                                         Text="• Light variants created automatically"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Classes="body-small" 
                                         Text="• Supports both Dark and Light themes"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Classes="body-small" 
                                         Text="• Use hex colors (#RRGGBB format)"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Auto-Generated Colors Info -->
                    <Border Background="{DynamicResource InfoLightBrush}"
                            BorderBrush="{DynamicResource InfoBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Classes="heading-small" 
                                     Text="🤖 Auto-Generated"
                                     Foreground="{DynamicResource InfoBrush}"/>
                            
                            <TextBlock Classes="body-small" 
                                     Text="These colors are automatically created from your 12 core colors:"
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     TextWrapping="Wrap"/>
                            
                            <StackPanel Spacing="2">
                                <TextBlock Classes="body-small" 
                                         Text="• Hover states (15% darker)"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Classes="body-small" 
                                         Text="• Light backgrounds for status"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Classes="body-small" 
                                         Text="• Contrasting text colors"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Classes="body-small" 
                                         Text="• Surface variations"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
        </Border>
        
    </Grid>
</UserControl>