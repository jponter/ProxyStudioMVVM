<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- My Custom Theme -->
  <!-- Description: A custom theme created with ProxyStudio Theme Editor -->
  <!-- Author: james -->
  <!-- Version: 1.0.0 -->
  <!-- Generated: 2025-08-11 15:41:50 -->
  <!-- ALIGNED: Uses EXACT same logic as preview -->

  <Styles.Resources>
    <ResourceDictionary>
      <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">

          <!-- ===== CORE COLORS (Generated by ApplyColorsToResources) ===== -->
          <!-- ===== FOUNDATION COLORS ===== -->
          <!-- Primary: Main brand color for primary actions and highlights -->
          <Color x:Key="PrimaryColor">#3498DB</Color>
          <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}"/>

          <!-- Secondary: Secondary accent color for supporting elements -->
          <Color x:Key="SecondaryColor">#95A5A6</Color>
          <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource SecondaryColor}"/>

          <!-- Surface: Base surface color for backgrounds and cards -->
          <Color x:Key="SurfaceColor">#2C3E50</Color>
          <SolidColorBrush x:Key="SurfaceBrush" Color="{DynamicResource SurfaceColor}"/>

          <!-- Border: Border and separator color -->
          <Color x:Key="BorderColor">#556983</Color>
          <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}"/>

          <!-- ===== SEMANTIC COLORS ===== -->
          <!-- Success: Success states, confirmations, and positive actions -->
          <Color x:Key="SuccessColor">#27AE60</Color>
          <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource SuccessColor}"/>

          <!-- Warning: Warning states, cautions, and important notices -->
          <Color x:Key="WarningColor">#F39C12</Color>
          <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource WarningColor}"/>

          <!-- Error: Error states, failures, and destructive actions -->
          <Color x:Key="ErrorColor">#E74C3C</Color>
          <SolidColorBrush x:Key="ErrorBrush" Color="{DynamicResource ErrorColor}"/>

          <!-- Info: Informational messages, hints, and neutral notices -->
          <Color x:Key="InfoColor">#3498DB</Color>
          <SolidColorBrush x:Key="InfoBrush" Color="{DynamicResource InfoColor}"/>

          <!-- ===== SURFACE COLORS ===== -->
          <!-- Background: Main application background color -->
          <Color x:Key="BackgroundColor">#2C3E50</Color>
          <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource BackgroundColor}"/>

          <!-- Surface Elevated: Elevated surfaces like cards, modals, and panels -->
          <Color x:Key="SurfaceElevatedColor">#34495E</Color>
          <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="{DynamicResource SurfaceElevatedColor}"/>

          <!-- ===== TEXT COLORS ===== -->
          <!-- Text Primary: Primary text color for headings and important content -->
          <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
          <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource TextPrimaryColor}"/>

          <!-- Text Secondary: Secondary text color for descriptions and labels -->
          <Color x:Key="TextSecondaryColor">#BDC3C7</Color>
          <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource TextSecondaryColor}"/>

          <!-- ===== DERIVED COLORS (Generated by ApplyDerivedColorsToResources) ===== -->
          <SolidColorBrush x:Key="BorderHoverBrush" Color="{DynamicResource BorderHoverColor}"/>
          <Color x:Key="BorderHoverColor">#48596F</Color>
          <SolidColorBrush x:Key="ErrorHoverBrush" Color="{DynamicResource ErrorHoverColor}"/>
          <Color x:Key="ErrorHoverColor">#C44033</Color>
          <SolidColorBrush x:Key="ErrorLightBrush" Color="{DynamicResource ErrorLightColor}"/>
          <Color x:Key="ErrorLightColor">#451612</Color>
          <SolidColorBrush x:Key="InfoHoverBrush" Color="{DynamicResource InfoHoverColor}"/>
          <Color x:Key="InfoHoverColor">#2C81BA</Color>
          <SolidColorBrush x:Key="InfoLightBrush" Color="{DynamicResource InfoLightColor}"/>
          <Color x:Key="InfoLightColor">#0F2D41</Color>
          <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{DynamicResource PrimaryHoverColor}"/>
          <Color x:Key="PrimaryHoverColor">#2C81BA</Color>
          <SolidColorBrush x:Key="SecondaryHoverBrush" Color="{DynamicResource SecondaryHoverColor}"/>
          <Color x:Key="SecondaryHoverColor">#7E8C8D</Color>
          <SolidColorBrush x:Key="SuccessHoverBrush" Color="{DynamicResource SuccessHoverColor}"/>
          <Color x:Key="SuccessHoverColor">#219351</Color>
          <SolidColorBrush x:Key="SuccessLightBrush" Color="{DynamicResource SuccessLightColor}"/>
          <Color x:Key="SuccessLightColor">#0B341C</Color>
          <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{DynamicResource SurfaceHoverColor}"/>
          <Color x:Key="SurfaceHoverColor">#293A4C</Color>
          <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{DynamicResource TextOnPrimaryColor}"/>
          <Color x:Key="TextOnPrimaryColor">#000000</Color>
          <SolidColorBrush x:Key="TextOnSecondaryBrush" Color="{DynamicResource TextOnSecondaryColor}"/>
          <Color x:Key="TextOnSecondaryColor">#000000</Color>
          <SolidColorBrush x:Key="WarningHoverBrush" Color="{DynamicResource WarningHoverColor}"/>
          <Color x:Key="WarningHoverColor">#CE840F</Color>
          <SolidColorBrush x:Key="WarningLightBrush" Color="{DynamicResource WarningLightColor}"/>
          <Color x:Key="WarningLightColor">#482E05</Color>
        </ResourceDictionary>
      </ResourceDictionary.ThemeDictionaries>
    </ResourceDictionary>
  </Styles.Resources>
</Styles>
