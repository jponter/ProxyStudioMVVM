<!-- Updated DarkProfessional.axaml - Using ThemeDictionaries Format -->
<!-- This is what your theme editor will now generate -->
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Dark Professional Theme - Simplified Color Palette -->
  <!-- Generated by ProxyStudio Theme Editor -->
  <!-- Author: ProxyStudio Team -->
  <!-- Version: 2.0.0 -->
  <!-- Generated: 2025-08-05 15:30:00 -->
  <!-- Based on: Dark Professional -->
  
  <Styles.Resources>
    <ResourceDictionary>
      <ResourceDictionary.ThemeDictionaries>
        
        <!-- Dark Theme Variant -->
        <ResourceDictionary x:Key="Dark">
          
          <!-- Foundation Colors (4 core colors) -->
          <Color x:Key="PrimaryColor">#3498db</Color>
          <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
          
          <Color x:Key="SecondaryColor">#95a5a6</Color>
          <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
          
          <Color x:Key="SurfaceColor">#2c3e50</Color>
          <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
          
          <Color x:Key="BorderColor">#556983</Color>
          <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
          
          <!-- Semantic Colors (4 colors) -->
          <Color x:Key="SuccessColor">#27ae60</Color>
          <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
          
          <Color x:Key="WarningColor">#f39c12</Color>
          <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
          
          <Color x:Key="ErrorColor">#e74c3c</Color>
          <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
          
          <Color x:Key="InfoColor">#3498db</Color>
          <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
          
          <!-- Surface Colors (2 colors) -->
          <Color x:Key="BackgroundColor">#2c3e50</Color>
          <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
          
          <Color x:Key="SurfaceElevatedColor">#34495e</Color>
          <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="{StaticResource SurfaceElevatedColor}"/>
          
          <!-- Text Colors (2 colors) -->
          <Color x:Key="TextPrimaryColor">#ffffff</Color>
          <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
          
          <Color x:Key="TextSecondaryColor">#bdc3c7</Color>
          <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
          
          <!-- Auto-Generated Derived Colors -->
          <!-- Hover states (15% darker) -->
          <Color x:Key="PrimaryHoverColor">#2980b9</Color>
          <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
          
          <Color x:Key="SecondaryHoverColor">#7f8c8d</Color>
          <SolidColorBrush x:Key="SecondaryHoverBrush" Color="{StaticResource SecondaryHoverColor}"/>
          
          <!-- Light variants for status backgrounds -->
          <Color x:Key="SuccessLightColor">#1e4d2b</Color>
          <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLightColor}"/>
          
          <Color x:Key="WarningLightColor">#4d3319</Color>
          <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLightColor}"/>
          
          <Color x:Key="ErrorLightColor">#4d1f23</Color>
          <SolidColorBrush x:Key="ErrorLightBrush" Color="{StaticResource ErrorLightColor}"/>
          
          <Color x:Key="InfoLightColor">#1e3a5f</Color>
          <SolidColorBrush x:Key="InfoLightBrush" Color="{StaticResource InfoLightColor}"/>
          
          <!-- Text on primary color (contrasting) -->
          <Color x:Key="TextOnPrimaryColor">#ffffff</Color>
          <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
          
        </ResourceDictionary>
        
        <!-- Light Theme Variant (automatically switches when RequestedThemeVariant=Light) -->
        <ResourceDictionary x:Key="Light">
          
          <!-- Foundation Colors adapted for light theme -->
          <Color x:Key="PrimaryColor">#007acc</Color>
          <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
          
          <Color x:Key="SecondaryColor">#6c757d</Color>
          <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
          
          <Color x:Key="SurfaceColor">#ffffff</Color>
          <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
          
          <Color x:Key="BorderColor">#dee2e6</Color>
          <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
          
          <!-- Semantic Colors for light theme -->
          <Color x:Key="SuccessColor">#28a745</Color>
          <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
          
          <Color x:Key="WarningColor">#ffc107</Color>
          <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
          
          <Color x:Key="ErrorColor">#dc3545</Color>
          <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
          
          <Color x:Key="InfoColor">#17a2b8</Color>
          <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
          
          <!-- Surface Colors for light theme -->
          <Color x:Key="BackgroundColor">#ffffff</Color>
          <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
          
          <Color x:Key="SurfaceElevatedColor">#f8f9fa</Color>
          <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="{StaticResource SurfaceElevatedColor}"/>
          
          <!-- Text Colors for light theme -->
          <Color x:Key="TextPrimaryColor">#212529</Color>
          <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
          
          <Color x:Key="TextSecondaryColor">#6c757d</Color>
          <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
          
          <!-- Light theme derived colors -->
          <Color x:Key="PrimaryHoverColor">#005a9e</Color>
          <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
          
          <Color x:Key="SecondaryHoverColor">#5a6268</Color>
          <SolidColorBrush x:Key="SecondaryHoverBrush" Color="{StaticResource SecondaryHoverColor}"/>
          
          <!-- Status light backgrounds for light theme -->
          <Color x:Key="SuccessLightColor">#d4edda</Color>
          <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLightColor}"/>
          
          <Color x:Key="WarningLightColor">#fff3cd</Color>
          <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLightColor}"/>
          
          <Color x:Key="ErrorLightColor">#f8d7da</Color>
          <SolidColorBrush x:Key="ErrorLightBrush" Color="{StaticResource ErrorLightColor}"/>
          
          <Color x:Key="InfoLightColor">#d1ecf1</Color>
          <SolidColorBrush x:Key="InfoLightBrush" Color="{StaticResource InfoLightColor}"/>
          
          <!-- Text on primary color for light theme -->
          <Color x:Key="TextOnPrimaryColor">#ffffff</Color>
          <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
          
        </ResourceDictionary>
        
      </ResourceDictionary.ThemeDictionaries>
    </ResourceDictionary>
  </Styles.Resources>

  <!-- Modern Control Styles using DynamicResource -->
  <!-- These styles automatically adapt to Light/Dark theme variants -->
  
  <!-- Button Styles -->
  <Style Selector="Button.primary">
    <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
    <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="16,8"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>

  <Style Selector="Button.primary:pointerover">
    <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHoverBrush}"/>
  </Style>

  <Style Selector="Button.secondary">
    <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
    <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="16,8"/>
  </Style>

  <Style Selector="Button.secondary:pointerover">
    <Setter Property="Background" Value="{DynamicResource SecondaryHoverBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource SecondaryHoverBrush}"/>
  </Style>

  <!-- Card Styles -->
  <Style Selector="Border.card">
    <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="16"/>
    <Setter Property="BoxShadow" Value="0 2 8 #1A000000"/>
  </Style>

  <Style Selector="Border.card-compact">
    <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="12"/>
    <Setter Property="BoxShadow" Value="0 1 4 #0D000000"/>
  </Style>

  <!-- Typography Styles -->
  <Style Selector="TextBlock.heading-large">
    <Setter Property="FontSize" Value="28"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.heading-medium">
    <Setter Property="FontSize" Value="22"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.heading-small">
    <Setter Property="FontSize" Value="18"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.body-large">
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="FontWeight" Value="Normal"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.body-medium">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="Normal"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.body-small">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="Normal"/>
    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
  </Style>

  <Style Selector="TextBlock.caption">
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
  </Style>

  <!-- Status Styles -->
  <Style Selector="Border.status-success">
    <Setter Property="Background" Value="{DynamicResource SuccessLightBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="Padding" Value="8"/>
  </Style>

  <Style Selector="Border.status-error">
    <Setter Property="Background" Value="{DynamicResource ErrorLightBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="Padding" Value="8"/>
  </Style>

  <Style Selector="Border.status-warning">
    <Setter Property="Background" Value="{DynamicResource WarningLightBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="Padding" Value="8"/>
  </Style>

  <Style Selector="Border.status-info">
    <Setter Property="Background" Value="{DynamicResource InfoLightBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource InfoBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="Padding" Value="8"/>
  </Style>

  <!-- Input Styles -->
  <Style Selector="TextBox">
    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="4"/>
    <Setter Property="Padding" Value="8"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBox:focus">
    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
    <Setter Property="BorderThickness" Value="2"/>
  </Style>

  <Style Selector="ComboBox">
    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <!-- Layout Styles -->
  <Style Selector="Border.sidebar">
    <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
  </Style>

  <!-- Highlight Styles -->
  <Style Selector="Border.highlight-primary">
    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
    <Setter Property="BorderThickness" Value="2"/>
  </Style>

  <Style Selector="Border.highlight-success">
    <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
    <Setter Property="BorderThickness" Value="2"/>
  </Style>

</Styles>