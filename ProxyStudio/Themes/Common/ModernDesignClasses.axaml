    <!-- ===== MODERN TABCONTROL STYLES ===== -->

    <!-- TabControl Container -->
    <Style Selector="TabControl">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- TabItem Base Style - Modern Subtle Approach -->
    <Style Selector="TabItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="Margin" Value="0,0,2,0" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="6,6,0,0" />
        <Setter Property="MinHeight" Value="40" />
      </Style> 
    

    <!-- TabItem Selected State - Uses SurfaceElevated for visual hierarchy -->
    <Style Selector="TabItem:selected">
        <!-- <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}" /> -->
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <!-- Optional: Add subtle border bottom for selected state -->
        <!-- <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" /> -->
        <!-- <Setter Property="BorderThickness" Value="0,0,0,2" /> -->
    </Style>
    <Style Selector="TabItem:selected /template/ ContentPresenter#PART_ContentPresenter">
        <!-- <Setter Property="Background" Value="Black"/> -->
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <!-- <Setter Property="FontWeight" Value="Bold"/> -->
        <!-- <Setter Property="FontStyle" Value="Italic"/> -->
        
        <!-- Optional: Add subtle border bottom for selected state -->
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,0" />
    </Style>
    <Style Selector="TabItem:selected /template/ Border#PART_SelectedPipe">
        <!-- <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" /> -->
        <Setter Property="IsVisible" Value="False"/>
    </Style>
        

    <!-- TabItem Hover State - Uses auto-generated hover colors -->
    <Style Selector="TabItem:pointerover /template/ Border#PART_LayoutRoot">
        <!-- <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" /> -->
        <Setter Property="TextElement.Foreground" Value="{DynamicResource TextSecondaryBrush}" />
    </Style>

    <!-- TabItem Selected + Hover - Maintains selected appearance -->
    <Style Selector="TabItem:selected:pointerover">
        <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryColor}" />
    </Style>

    <!-- TabItem Disabled State -->
    <Style Selector="TabItem:disabled">
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
    </Style>

    <!-- TabItem Focus State - For keyboard navigation -->
    <Style Selector="TabItem:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- ~1~ Content Area Styling @1@ -->
    <!-- <Style Selector="TabControl > ContentPresenter"> -->
    <!--     <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" /> -->
    <!--     <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" /> -->
    <!--     <Setter Property="BorderThickness" Value="1" /> -->
    <!--     <Setter Property="CornerRadius" Value="0,6,6,6" /> -->
    <!--     <Setter Property="Padding" Value="16" /> -->
    <!-- </Style> -->

  

    <!-- ===== ALTERNATIVE ACCENT-BASED STYLES (OPTIONAL) ===== -->
    <!-- Uncomment these if you prefer accent-colored tabs instead of subtle approach -->

    
<Style Selector="TabItem.accent-style">
  <Setter Property="Background" Value="Transparent"/>
  <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  <Setter Property="Padding" Value="16,12"/>
  <Setter Property="Margin" Value="0,0,2,0"/>
  <Setter Property="FontWeight" Value="Medium"/>
  <Setter Property="CornerRadius" Value="6,6,0,0"/>
</Style>

<Style Selector="TabItem.accent-style:selected">
  <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
  <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
  <Setter Property="FontWeight" Value="SemiBold"/>
</Style>

<Style Selector="TabItem.accent-style:pointerover">
  <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
  <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
</Style>


