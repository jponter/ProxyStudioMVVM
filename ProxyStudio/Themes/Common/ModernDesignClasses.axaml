    <!-- ===== RESPONSIVE TAB SIZING ===== -->
    <!-- For when you have many tabs -->
    <Style Selector="TabControl.compact TabItem">
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="MinHeight" Value="36" />
    </Style>

    <!-- ===== THEME VARIANT SUPPORT ===== -->
    <!-- These will automatically adapt to light/dark themes -->
    <!-- No additional styling needed - your DynamicResource brushes handle this! -->

    <!-- ===== USAGE EXAMPLES ===== -->
