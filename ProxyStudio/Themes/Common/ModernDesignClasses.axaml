<!-- ModernDesignClasses.axaml - Complete Modern Design System for ProxyStudio -->
<!-- This file provides all the CSS-like classes used throughout your views -->
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===================================================================== -->
    <!-- TYPOGRAPHY CLASSES -->
    <!-- ===================================================================== -->

    <!-- Heading Styles -->
    <Style Selector="TextBlock.heading-large">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <Style Selector="TextBlock.heading-medium">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <Style Selector="TextBlock.heading-small">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <!-- Body Text Styles -->
    <Style Selector="TextBlock.body-large">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <Style Selector="TextBlock.body-medium">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <Style Selector="TextBlock.body-small">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <!-- Caption and Helper Text -->
    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <!-- Note: TextTransform and LetterSpacing not available in Avalonia -->
    </Style>

    <!-- ===================================================================== -->
    <!-- CARD LAYOUT CLASSES -->
    <!-- ===================================================================== -->

    <!-- Basic Card -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <!-- Elevated Card with Shadow -->
    <Style Selector="Border.card-elevated">
        <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="BoxShadow" Value="0 4 12 0 #1A000000" />
    </Style>

    <!-- Compact Card for Tight Spaces -->
    <Style Selector="Border.card-compact">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <!-- Sidebar Panel -->
    <Style Selector="Border.sidebar">
        <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Sidebar ScrollViewer -->
    <Style Selector="ScrollViewer.sidebar">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Preview Area -->
    <Style Selector="ScrollViewer.preview">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
        <Setter Property="Padding" Value="20" />
    </Style>

    <!-- ===================================================================== -->
    <!-- BUTTON CLASSES -->
    <!-- ===================================================================== -->

    <!-- Primary Action Button -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHoverBrush}" />
    </Style>

    <Style Selector="Button.primary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <!-- Secondary Button -->
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="{DynamicResource SecondaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextOnSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SecondaryHoverBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SecondaryHoverBrush}" />
    </Style>

    <!-- Success Button -->
    <Style Selector="Button.success">
        <Setter Property="Background" Value="{DynamicResource SuccessBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextOnSuccessBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.success:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SuccessHoverBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SuccessHoverBrush}" />
    </Style>

    <!-- Warning Button -->
    <Style Selector="Button.warning">
        <Setter Property="Background" Value="{DynamicResource WarningBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextOnWarningBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.warning:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource WarningHoverBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource WarningHoverBrush}" />
    </Style>

    <!-- Error/Danger Button -->
    <Style Selector="Button.error, Button.danger">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextOnErrorBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style
        Selector="Button.error:pointerover /template/ ContentPresenter, Button.danger:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ErrorHoverBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ErrorHoverBrush}" />
    </Style>

    <!-- Icon Button (Small, Square) -->
    <Style Selector="Button.icon">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Width" Value="46" />
        <Setter Property="Height" Value="46" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.icon:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
    </Style>

    <!-- Icon Button (Small, Square) -->
    <Style Selector="Button.iconfont">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Width" Value="46" />
        <Setter Property="Height" Value="46" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.iconfont:pointerover /template/ ContentPresenter">

        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderHoverBrush}" />
    </Style>

    <!-- ===================================================================== -->
    <!-- FORM CONTROL CLASSES -->
    <!-- ===================================================================== -->

    <!-- Modern Input Controls -->
    <Style Selector="TextBox.modern">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style Selector="TextBox.modern:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>

    <Style Selector="ComboBox.modern">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style Selector="ComboBox.modern:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>

    <Style Selector="Slider.modern">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Background" Value="{DynamicResource BorderBrush}" />
    </Style>

    <!-- ===================================================================== -->
    <!-- HIGHLIGHT/STATUS CLASSES -->
    <!-- ===================================================================== -->

    <!-- Success Highlights -->
    <Style Selector="Border.highlight-success">
        <Setter Property="Background" Value="{DynamicResource SuccessLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Warning Highlights -->
    <Style Selector="Border.highlight-warning">
        <Setter Property="Background" Value="{DynamicResource WarningLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Error Highlights -->
    <Style Selector="Border.highlight-error">
        <Setter Property="Background" Value="{DynamicResource ErrorLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Info Highlights -->
    <Style Selector="Border.highlight-info">
        <Setter Property="Background" Value="{DynamicResource InfoLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource InfoBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Primary Highlights -->
    <Style Selector="Border.highlight-primary">
        <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- ===================================================================== -->
    <!-- SPECIAL COMPONENT CLASSES -->
    <!-- ===================================================================== -->

    <!-- Loading Overlay -->
    <Style Selector="Border.loading-overlay">
        <Setter Property="Background" Value="#80000000" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>

    <!-- Disabled State -->
    <Style Selector="Border.disabled">
        <Setter Property="Opacity" Value="0.6" />
        <Setter Property="IsHitTestVisible" Value="False" />
    </Style>

    <!-- ===================================================================== -->
    <!-- INTERACTIVE HOVER EFFECTS -->
    <!-- ===================================================================== -->

    <!-- Card Hover Effects -->
    <!-- Disabled 11/08/2025: James Ponter - these pointerover effects did not improve the UI experience and were causing confusion -->
    <!-- Uncomment if you want to re-enable hover effects on cards -->


