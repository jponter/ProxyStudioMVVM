    <!-- ===================================================================== -->
    <!-- UTILITY CLASSES -->
    <!-- ===================================================================== -->

    <!-- Text Alignment -->
    <Style Selector="TextBlock.text-center">
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <Style Selector="TextBlock.text-left">
        <Setter Property="TextAlignment" Value="Left" />
    </Style>

    <Style Selector="TextBlock.text-right">
        <Setter Property="TextAlignment" Value="Right" />
    </Style>

    <!-- Margins and Spacing for Controls -->
    <Style Selector="Control.margin-small">
        <Setter Property="Margin" Value="8" />
    </Style>

    <Style Selector="Control.margin-medium">
        <Setter Property="Margin" Value="16" />
    </Style>

    <Style Selector="Control.margin-large">
        <Setter Property="Margin" Value="24" />
    </Style>

    <!-- Margins for Panels -->
    <Style Selector="Panel.margin-small">
        <Setter Property="Margin" Value="8" />
    </Style>

    <Style Selector="Panel.margin-medium">
        <Setter Property="Margin" Value="16" />
    </Style>

    <Style Selector="Panel.margin-large">
        <Setter Property="Margin" Value="24" />
    </Style>

</Styles>